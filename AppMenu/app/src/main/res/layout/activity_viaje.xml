<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFE9B2"
        tools:context=".MainActivity"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8BC34A"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Calculadora de datos de viajes"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C51162"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Kilómetros recorridos:"
            android:textColor="@android:color/white"
            android:textSize="8pt" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:hint=""
            android:inputType="numberDecimal"
            android:id="@+id/etxKm"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C51162"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Precio de la gasolina (Por litro):"
            android:textColor="@android:color/white"
            android:textSize="8pt" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:hint=""
            android:inputType="numberDecimal"
            android:id="@+id/etxGas"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C51162"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Dinero gastado en gasolina en el viaje:"
            android:textColor="@android:color/white"
            android:textSize="8pt" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:hint=""
            android:inputType="numberDecimal"
            android:id="@+id/etxGasViaje"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C51162"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Tiempo transcurrido en el viaje:"
            android:textColor="@android:color/white"
            android:textSize="8pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8C9EFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Horas:"
            android:textColor="@android:color/white"
            android:textSize="8pt" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:hint=""
            android:inputType="numberDecimal"
            android:id="@+id/etxHoras"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8C9EFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Minutos:"
            android:textColor="@android:color/white"
            android:textSize="8pt" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:hint=""
            android:inputType="numberDecimal"
            android:id="@+id/etxMinutos"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4511E"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Seleccionar una opción"
            android:textColor="@android:color/white"
            android:textSize="8pt" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rgpOpciones">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Por cada 100 km/h"
                android:id="@+id/rdb100km"
                android:textSize="8pt"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Por cada Km/h"
                android:id="@+id/rdb1km"
                android:textSize="8pt"/>
        </RadioGroup>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:textSize="8pt"
            android:id="@+id/btnCalcular"/>

        <TextView
            android:id="@+id/txvResultado"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="8pt" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:textSize="8pt" />

    </LinearLayout>
</ScrollView>