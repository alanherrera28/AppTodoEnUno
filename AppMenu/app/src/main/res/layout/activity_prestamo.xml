<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFE9B2"
        tools:context=".MainActivity"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8BC34A"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="Calculadora de préstamos"
            android:textColor="@android:color/white"
            android:textSize="10pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC107"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Monto del préstamo:"
            android:textColor="@android:color/white"
            android:textSize="8pt" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:hint=""
            android:inputType="numberDecimal"
            android:id="@+id/etxMonto"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFC107"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Interés anual:"
            android:textColor="@android:color/white"
            android:textSize="8pt" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            android:hint=""
            android:inputType="numberDecimal"
            android:id="@+id/etxInteresAnual"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF5722"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            android:text="Seleccionar el plazo:"
            android:textColor="@android:color/white"
            android:textSize="8pt" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rgpOpciones">
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 meses"
                android:id="@+id/rdb6meses"
                android:textSize="8pt"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 meses"
                android:id="@+id/rdb12meses"
                android:textSize="8pt"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="18 meses"
                android:id="@+id/rdb18meses"
                android:textSize="8pt"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="24 meses"
                android:id="@+id/rdb24meses"
                android:textSize="8pt"/>
        </RadioGroup>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:textSize="8pt"
            android:id="@+id/btnCalcular"/>

        <TextView
            android:id="@+id/txvResultado"
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:textSize="8pt" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:textSize="8pt"
            android:id="@+id/btnRegresar"/>

    </LinearLayout>
</ScrollView>